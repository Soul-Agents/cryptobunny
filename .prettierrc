{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.py"],
      "options": {
        "tabWidth": 4,
        "printWidth": 88,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 2,
        "proseWrap": "always",
        "printWidth": 80
      }
    }
  ]
}
